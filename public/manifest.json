{
  "name": "Scribe",
  "version": "1.0.0",
  "description": "",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Scribe"
  },
  "background": {
    "service_worker": "serviceWorkers/onUserDictateWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScripts/keyListener.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["scripting"]
}
